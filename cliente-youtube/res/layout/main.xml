<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_fondo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_ly_search"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <EditText
            android:id="@+id/et_busqueda"
            android:layout_width="0dp"
            android:layout_height="40dip"
            android:layout_marginTop="2dip"
            android:layout_weight="1"
            android:background="@drawable/background_edtxt_search"
            android:drawableLeft="@drawable/ic_youtube"
            android:ems="10"
            android:hint="@string/hint_search_edtxt"
            android:paddingLeft="2dip"
            android:paddingRight="5dip" />

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:background="@android:drawable/ic_menu_search"
            android:drawableRight="@android:drawable/ic_menu_search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/info_resultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_resultados"
            android:textColor="@color/main_txt_info"
            android:textColorHint="@color/main_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:paddingTop="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:paddingTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip" >

        <ListView
            android:id="@+id/lv_main_respuesta_busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>
    </LinearLayout>

</LinearLayout>